#!/bin/bash

# get path to script
export FCCSWBASEDIR=@CMAKE_INSTALL_PREFIX@
export FCCSWSHAREDIR=$FCCSWBASEDIR/share/FCCSW
export FCC_DETECTORS=$FCCSWSHAREDIR
export FCC_PYTHIACARDS=$FCCSWSHAREDIR

export PATH=$FCCSWBASEDIR/scripts:$FCCSWBASEDIR/bin:$PATH
export LD_LIBRARY_PATH=$FCCSWBASEDIR/lib:$FCCSWBASEDIR/lib64:$LD_LIBRARY_PATH
export PYTHONPATH=$FCCSWBASEDIR/lib:$FCCSWBASEDIR/python:$PYTHONPATH
export CMAKE_PREFIX_PATH=$FCCSWBASEDIR:$CMAKE_PREFIX_PATH



